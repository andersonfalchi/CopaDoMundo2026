@page "/palpites"
@using CopaDoMundo2026.Services
@using CopaMundo2026.Models

@inject JogosApiClient Api
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Palpites - Copa do Mundo 2026</PageTitle>

<div class="container">
    <div class="header">
        <h1>🏆 Meus Palpites - Copa do Mundo 2026</h1>
        <div class="user-info">
            <span class="username">@nomeUsuario</span>
            <button class="btn-save-all" @onclick="SalvarTodosPalpites" disabled="@isSaving">
                @if (isSaving)
                {
                    <span class="spinner"></span>
                    <span>Salvando...</span>
                }
                else
                {
                    <span>💾 Salvar Todos os Palpites</span>
                }
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading">
            <div class="spinner-large"></div>
            <p>Carregando jogos...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(mensagemErro))
    {
        <div class="error-state">
            <p>❌ @mensagemErro</p>
            <button class="btn-retry" @onclick="CarregarDados">Tentar Novamente</button>
        </div>
    }
    else if (jogos == null || jogos.Count == 0)
    {
        <div class="empty-state">
            <p>⚽ Nenhum jogo disponível para palpites no momento.</p>
        </div>
    }
    else
    {
        <div class="filters">
            <button class="filter-btn @(grupoSelecionado == "TODOS" ? "active" : "")"
                    @onclick="FiltrarTodos">
                Todos os Grupos
            </button>
            @foreach (var grupo in grupos)
            {
                var grupoLocal = grupo;
                <button class="filter-btn @(grupoSelecionado == grupoLocal ? "active" : "")"
                        @onclick="() => FiltrarPorGrupo(grupoLocal)">
                    @grupoLocal
                </button>
            }
        </div>

        <div class="games-grid">
            @foreach (var jogo in jogosFiltrados)
            {
                var jogoLocal = jogo;
                var palpiteExistente = palpitesMap.ContainsKey(jogoLocal.Id) ? palpitesMap[jogoLocal.Id] : null;
                var golsA = palpiteExistente?.QtdGolsSelecaoA ?? 0;
                var golsB = palpiteExistente?.QtdGolsSelecaoB ?? 0;

                <div class="game-card">
                    <div class="game-header">
                        <span class="badge-grupo">@jogoLocal.Grupo</span>
                        <span class="badge-rodada">@jogoLocal.Rodada</span>
                    </div>

                    <div class="game-info">
                        <div class="date-time">
                            <span class="icon">📅</span>
                            <span>@jogoLocal.DataHora.ToLocalTime().ToString("dd/MM/yyyy")</span>
                            <span class="icon">🕐</span>
                            <span>@jogoLocal.DataHora.ToLocalTime().ToString("HH:mm")</span>
                        </div>
                        <div class="stadium">
                            <span class="icon">🏟️</span>
                            <span>@jogoLocal.Estadio</span>
                        </div>
                    </div>

                    <div class="match-container">
                        <div class="team">
                            <img src="@jogoLocal.BandeiraSelecaoA" alt="@jogoLocal.SelecaoA" class="flag" />
                            <span class="team-name">@jogoLocal.SelecaoA</span>
                        </div>

                        <div class="score-input">
                            <input type="number"
                                   min="0"
                                   max="20"
                                   class="score-field"
                                   value="@golsA"
                                   @onchange="@((ChangeEventArgs e) => AtualizarGolsA(jogoLocal.Id, e.Value))"
                                   placeholder="0" />

                            <span class="vs">X</span>

                            <input type="number"
                                   min="0"
                                   max="20"
                                   class="score-field"
                                   value="@golsB"
                                   @onchange="@((ChangeEventArgs e) => AtualizarGolsB(jogoLocal.Id, e.Value))"
                                   placeholder="0" />
                        </div>

                        <div class="team">
                            <img src="@jogoLocal.BandeiraSelecaoB" alt="@jogoLocal.SelecaoB" class="flag" />
                            <span class="team-name">@jogoLocal.SelecaoB</span>
                        </div>
                    </div>

                    @if (palpiteExistente != null && palpiteExistente.Id > 0)
                    {
                        <div class="saved-indicator">
                            <span class="icon">✓</span>
                            <span>Palpite salvo</span>
                        </div>
                    }
                </div>
            }
        </div>
    }

    @if (!string.IsNullOrEmpty(mensagem))
    {
        <div class="toast @toastClass">
            @mensagem
        </div>
    }
</div>

@code {
    private List<JogoDto> jogos = new();
    private Dictionary<int, PalpiteDto> palpitesMap = new();
    private List<JogoDto> jogosFiltrados = new();
    private List<string> grupos = new();
    private string grupoSelecionado = "TODOS";
    private string nomeUsuario = "Usuário";
    private int usuarioId = 1; // TODO: Obter do estado de autenticação

    private bool isLoading = true;
    private bool isSaving = false;
    private string mensagem = string.Empty;
    private string mensagemErro = string.Empty;
    private string toastClass = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await CarregarDados();
    }

    private void AtualizarGolsA(int jogoId, object? valor)
    {
        if (int.TryParse(valor?.ToString(), out int gols))
        {
            gols = Math.Max(0, Math.Min(20, gols));

            if (palpitesMap.ContainsKey(jogoId))
            {
                var palpite = palpitesMap[jogoId];
                palpitesMap[jogoId] = palpite with { QtdGolsSelecaoA = gols };
            }
            else
            {
                palpitesMap[jogoId] = new PalpiteDto(0, usuarioId, jogoId, gols, 0, null);
            }

            StateHasChanged();
        }
    }

    private void AtualizarGolsB(int jogoId, object? valor)
    {
        if (int.TryParse(valor?.ToString(), out int gols))
        {
            gols = Math.Max(0, Math.Min(20, gols));

            if (palpitesMap.ContainsKey(jogoId))
            {
                var palpite = palpitesMap[jogoId];
                palpitesMap[jogoId] = palpite with { QtdGolsSelecaoB = gols };
            }
            else
            {
                palpitesMap[jogoId] = new PalpiteDto(0, usuarioId, jogoId, 0, gols, null);
            }

            StateHasChanged();
        }
    }

    private async Task CarregarDados()
    {
        isLoading = true;
        mensagemErro = string.Empty;
        StateHasChanged();

        try
        {
            // Carregar jogos da primeira rodada
            var (sucessoJogos, msgJogos, jogosData) = await Api.ObterJogosPorRodadaAsync("1ª RODADA");

            if (!sucessoJogos || jogosData == null)
            {
                mensagemErro = msgJogos;
                return;
            }

            jogos = jogosData;

            // Carregar palpites do usuário
            var (sucessoPalpites, msgPalpites, palpitesData) = await Api.ObterPalpitesUsuarioAsync(usuarioId);

            if (sucessoPalpites && palpitesData != null)
            {
                palpitesMap = palpitesData.ToDictionary(p => p.JogoId, p => p);
            }

            // Extrair grupos únicos
            grupos = jogos.Select(j => j.Grupo).Distinct().OrderBy(g => g).ToList();

            // Inicializar filtro
            FiltrarPorGrupo("TODOS");
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro inesperado: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void FiltrarPorGrupo(string grupo)
    {
        grupoSelecionado = grupo;
        jogosFiltrados = grupo == "TODOS"
            ? jogos.ToList()
            : jogos.Where(j => j.Grupo == grupo).ToList();
        StateHasChanged();
    }

    private void FiltrarTodos()
    {
        FiltrarPorGrupo("TODOS");
    }

    private async Task SalvarTodosPalpites()
    {
        isSaving = true;
        mensagem = string.Empty;
        StateHasChanged();

        await Task.Delay(300);

        try
        {
            var palpitesParaSalvar = palpitesMap.Values
                .Where(p => p.QtdGolsSelecaoA >= 0 && p.QtdGolsSelecaoB >= 0)
                .Select(p => new PalpiteLoteDto(p.UsuarioId, p.JogoId, p.QtdGolsSelecaoA, p.QtdGolsSelecaoB))
                .ToList();

            if (palpitesParaSalvar.Count == 0)
            {
                MostrarMensagem("⚠️ Nenhum palpite para salvar.", "warning");
                return;
            }

            var (sucesso, msg, resultado) = await Api.SalvarPalpitesLoteAsync(palpitesParaSalvar);

            if (sucesso && resultado != null)
            {
                MostrarMensagem($"✅ {resultado.Sucesso} palpite(s) salvos com sucesso!", "success");

                // Recarregar palpites para atualizar IDs
                await Task.Delay(1000);
                var (sucessoPalpites, _, palpitesData) = await Api.ObterPalpitesUsuarioAsync(usuarioId);

                if (sucessoPalpites && palpitesData != null)
                {
                    palpitesMap = palpitesData.ToDictionary(p => p.JogoId, p => p);
                    StateHasChanged();
                }
            }
            else
            {
                MostrarMensagem($"❌ {msg}", "error");
            }
        }
        catch (Exception ex)
        {
            MostrarMensagem($"❌ Erro: {ex.Message}", "error");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async void MostrarMensagem(string msg, string tipo)
    {
        mensagem = msg;
        toastClass = tipo;
        StateHasChanged();

        await Task.Delay(3000);
        mensagem = string.Empty;
        StateHasChanged();
    }
}

